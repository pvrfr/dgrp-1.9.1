#
# UDEV script for the DIGI DGRP RealPort driver.
#

# Translate all underscores to spaces.
STRING1=`echo "$1" | @TR@ "_" " "`

# Parse out the various things we need.
TYPE=`echo $STRING1 | @AWK@ '{print $1}'`
NAME=`echo $STRING1 | @AWK@ '{print $3}'`
TMPPORT=`echo $STRING1 | @AWK@ '{print $4}'`

# Pad out the name correctly.
case $TMPPORT in
	?) PORT=0$TMPPORT;;
	??) PORT=$TMPPORT;;
	???) PORT=$TMPPORT;;
esac

echo "$TYPE$NAME$PORT"
